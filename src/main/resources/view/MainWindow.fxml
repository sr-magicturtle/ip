<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="750.0" minWidth="600.0"
            prefHeight="750.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.MainWindow"
            style="-fx-background-image: url('/images/Background.jpg');
                -fx-background-size: cover;
                -fx-background-position: center;">
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="76.0"
                   AnchorPane.bottomAnchor="1.0"
                   promptText="Type your command here..." />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="0.0" />
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    vvalue="1.0"
                    style="-fx-background: transparent;
                   -fx-background-color: transparent;"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="42.0">
            <VBox fx:id="dialogContainer"
                  style="-fx-background-color: transparent;" />
        </ScrollPane>
</AnchorPane>
